<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background & text -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- Light Theme -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/text_light</item>

        <!-- Background & text -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_light</item>

        <!-- Buttons -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Dark Theme -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_dark</item>

        <!-- Background & text -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_dark</item>

        <!-- Buttons -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

</resources>
